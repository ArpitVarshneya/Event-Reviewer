<% if !user_signed_in? %>
<div class="jumbotron">
  <h1>Review Events</h1>
  <p>Review your attended events and make people aware about the community and their events.</p>
  <p><%= link_to "Sign Up to Write a Review", new_user_registration_path, class: " btn btn-primary btn-lg" %></p>
</div>
<% end %>
<div class="row">
  <% @events.each do |event| %>
    <div class="col-sm-6 col-md-3">
    <div class="thumbnail">
      <%= link_to (image_tag event.image.url(:medium), class: 'image'), event%>
    </div>
    </div>
  <% end %>
</div>