<%= javascript_include_tag('character_length.js') %>
<%= form_for @event, html: { multipart: true } do |f| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>
      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :name, :class => 'field' %><br>
    <%= f.text_field :name, :class => 'message' , :maxlength => 140 ,:size => 20 %>
    <span><em>(Upto 140 characters)</em></span>
  </div>

  <div class="date">
    <%= f.label :date, :class => 'field' %><br>
    <%= f.date_select :date, {order: [:month, :day, :year], prompt: { day: 'Select day', month: 'Select month', year: 'Select year' }, start_year: Date.today.year - 18, end_year: Date.today.year - 100}, {required: true} %>
  </div>
  <br>
  <div>
    <%= f.label :time, :class => 'field'  %><br>
    <%= f.text_field :time %>
  </div>
  <br>

  <div>
    <%= f.label :venue, :class => 'field'  %><br>
    <%= f.text_field :venue, :class => 'message' , :maxlength => 140 ,:size => 20 %>
    <span><em>(Upto 140 characters)</em></span>
  </div>
  <br>

  <div>
    <%= f.label :description, :class => 'field'  %><br>
    <%= f.text_area :description, :id=>"word_count" %>
    <span><em>(Upto 100 words)</em></span>
  </div>

  <div>
    <%= f.label :category, :class => 'field'  %><br>
    <%= select_tag :category, options_for_select(["Meetup", "Cultural Event", "Technical Event"])%>
  </div>

  <div>
    <%= f.label :image, :class => 'field'  %><br>
    <%= f.file_field :image %>
  </div>
  <br>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
